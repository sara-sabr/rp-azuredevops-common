{
  "compilerOptions": {
    "module": "amd",
    "moduleResolution": "node",
    "sourceMap": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "target": "es6",
    "rootDir": "src/",
    "outDir": "dist/",
    "lib": ["es6", "dom"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "typings", "dist"]
}
